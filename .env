# ==============================================
# PDF Generator API - Environment Configuration
# ==============================================

# Perplexity API Key (required for AI content generation)
# Get your key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=sk-pplx

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-secret-key-change-in-production

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
MAX_PDF_SIZE_MB=50

# PDF Generation Settings
DEFAULT_LANGUAGE=fr
DEFAULT_AUTHOR=Your Company Name
DEFAULT_COVER_STYLE=gradient-blue
DEFAULT_PAGE_COUNT=18

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# Storage
PDF_OUTPUT_DIR=generated_pdfs
TEMP_DIR=temp/

# Optional: Database (for future features)
# DATABASE_URL=sqlite:///pdf_generator.db

# Optional: Redis (for caching)

# REDIS_URL=redis://localhost:6379/0
